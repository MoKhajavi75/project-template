{
  "name": "project-template",
  "version": "1.0.0",
  "description": "",
  "main": "build/index.js",
  "scripts": {
    "start": "pnpm clean && pnpm build && pnpm execute",
    "test": "pnpm clean && pnpm build && jest --no-cache",
    "clean": "rm -rf build coverage cache",
    "build": "tsc && tsc-alias",
    "execute": "node build/index.js",
    "dev": "node-dev -r tsconfig-paths/register src/index.ts",
    "lint": "eslint .",
    "prettier": "prettier -c .",
    "prettier-fix": "prettier -w .",
    "coverage": "typescript-coverage-report -o coverage",
    "mirror-config": "bash scripts/mirror_config.sh",
    "prepare": "husky install"
  },
  "engines": {
    "node": ">=12",
    "pnpm": ">=6"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:MohamadKh75/project-template.git"
  },
  "author": "MohamadKh75",
  "license": "MIT",
  "dependencies": {
    "js-yaml": "^4.1.0",
    "winston": "^3.6.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.2.1",
    "@commitlint/config-conventional": "^16.2.1",
    "@types/jest": "^27.4.1",
    "@types/js-yaml": "^4.0.5",
    "@types/node": "^17.0.19",
    "@typescript-eslint/eslint-plugin": "^5.12.1",
    "@typescript-eslint/parser": "^5.12.1",
    "eslint": "^8.9.0",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "node-dev": "^7.1.0",
    "prettier": "^2.5.1",
    "ts-node": "^10.5.0",
    "tsc-alias": "^1.6.2",
    "tsconfig-paths": "^3.12.0",
    "typescript": "^4.5.5",
    "typescript-coverage-report": "^0.6.4"
  }
}
