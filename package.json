{
  "name": "project-template",
  "version": "1.0.0",
  "description": "My project template in TS ðŸ’™",
  "main": "build/index.js",
  "scripts": {
    "start": "pnpm clean && pnpm build && pnpm execute",
    "test": "pnpm clean && pnpm build && jest --no-cache",
    "clean": "rm -rf build coverage cache",
    "build": "tsc && tsc-alias",
    "execute": "node build/index.js",
    "dev": "node-dev -r tsconfig-paths/register src/index.ts",
    "lint": "eslint . --config .eslintrc.json --cache",
    "prettier": "prettier -c . --config .prettierrc.json",
    "format": "prettier -w . --config .prettierrc.json",
    "coverage": "typescript-coverage-report -o coverage",
    "mirror-config": "node scripts/mirror-config.js",
    "prepare": "husky install"
  },
  "engines": {
    "node": ">=18",
    "pnpm": ">=7"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:MohamadKh75/project-template.git"
  },
  "author": "MohamadKh75",
  "license": "MIT",
  "dependencies": {
    "js-yaml": "^4.1.0",
    "winston": "^3.8.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.4.4",
    "@commitlint/config-conventional": "^17.4.4",
    "@types/jest": "^29.4.0",
    "@types/js-yaml": "^4.0.5",
    "@types/node": "^18.15.0",
    "@types/shelljs": "^0.8.11",
    "@typescript-eslint/eslint-plugin": "^5.54.1",
    "@typescript-eslint/parser": "^5.54.1",
    "chalk": "^4.1.2",
    "eslint": "^8.36.0",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "node-dev": "^8.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.4",
    "shelljs": "^0.8.5",
    "ts-node": "^10.9.1",
    "tsc-alias": "^1.8.3",
    "tsconfig-paths": "^4.1.2",
    "typescript": "^4.9.5",
    "typescript-coverage-report": "^0.7.0"
  }
}
