{
  "name": "project-template",
  "version": "1.0.0",
  "description": "",
  "main": "build/index.js",
  "scripts": {
    "start": "pnpm clean && pnpm build && pnpm execute",
    "test": "pnpm clean && pnpm build && jest --no-cache",
    "clean": "rm -rf build coverage cache",
    "build": "tsc && tsc-alias",
    "execute": "node build/index.js",
    "dev": "node-dev -r tsconfig-paths/register src/index.ts",
    "lint": "eslint .",
    "prettier": "prettier -c .",
    "format": "prettier -w .",
    "coverage": "typescript-coverage-report -o coverage",
    "mirror-config": "bash scripts/mirror_config.sh",
    "prepare": "husky install"
  },
  "engines": {
    "node": ">=14",
    "pnpm": ">=7"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:MohamadKh75/project-template.git"
  },
  "author": "MohamadKh75",
  "license": "MIT",
  "dependencies": {
    "js-yaml": "^4.1.0",
    "winston": "^3.7.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.0",
    "@commitlint/config-conventional": "^17.0.0",
    "@types/jest": "^27.5.1",
    "@types/js-yaml": "^4.0.5",
    "@types/node": "^17.0.33",
    "@typescript-eslint/eslint-plugin": "^5.23.0",
    "@typescript-eslint/parser": "^5.23.0",
    "eslint": "^8.15.0",
    "husky": "^8.0.1",
    "jest": "^28.1.0",
    "node-dev": "^7.4.3",
    "prettier": "^2.6.2",
    "ts-node": "^10.7.0",
    "tsc-alias": "^1.6.7",
    "tsconfig-paths": "^4.0.0",
    "typescript": "^4.6.4",
    "typescript-coverage-report": "^0.6.4"
  }
}
