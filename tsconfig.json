{
  "compilerOptions": {
    "target": "esnext",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noEmit": false,
    "esModuleInterop": true,
    "module": "commonjs",
    "resolveJsonModule": true,
    "sourceMap": true,
    "declaration": true,
    "lib": ["esnext"],
    "outDir": "./dist"
  },
  "include": ["./src/**/*.ts"]
}
